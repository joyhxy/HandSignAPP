/* pages/volunteer/activityList/activityList.wxss */
page {
  --bg-color: #F8F4F0; /* UI稿主背景色 - Warm Off-White */
  --text-color-dark: #333333;
  --text-color-light: #666666;
  --accent-color: #FF8C00;
  --card-bg-solid-white: white;
  --font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  --border-radius-sm: 16rpx;
  --border-radius-md: 24rpx;
  --border-radius-lg: 32rpx; /* UI稿卡片圆角 (16px) */
  /* UI稿中卡片阴影非常柔和，几乎是背景色微调，这里用一个更标准的柔和阴影 */
  --shadow-card: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  --placeholder-bg: #EFEFEF; /* 占位背景色更浅一些 */
  --placeholder-text-color: #B0B0B0;
}
view, text, button, image, scroll-view { box-sizing: border-box; }

.activity-list-page-container {
  padding: 30rpx 40rpx 40rpx;
  background-color: var(--bg-color); /* **使用UI稿的页面背景色** */
  min-height: 100vh;
  font-family: var(--font-family);
}

/* --- 页面头部 --- */
.header-section {
  display: flex; justify-content: space-between; align-items: center;
  margin-bottom: 30rpx;
}
.page-main-title {
  font-size: 48rpx; font-weight: 600; color: var(--text-color-dark);
}
.header-actions { display: flex; align-items: center; }
.search-icon { width: 44rpx; height: 44rpx; margin-right: 24rpx; }
.my-activities-link {
  font-size: 28rpx; color: var(--accent-color); font-weight: 500;
  padding: 10rpx 0 10rpx 10rpx;
}
.my-activities-link:active { opacity: 0.7; }

/* --- 筛选标签 --- */
.filter-chips-scroll-view {
  width: 100%; white-space: nowrap; margin-bottom: 30rpx;
}
.filter-chips-inner-container { display: flex; gap: 16rpx; }
.chip {
  display: inline-block; padding: 10rpx 28rpx; border-radius: 30rpx;
  background: var(--card-bg-solid-white); color: var(--text-color-light);
  font-size: 26rpx; white-space: nowrap;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.04); /* 标签也加一点点阴影 */
}
.chip.active {
  background-color: var(--accent-color); color: white; font-weight: 500;
  box-shadow: 0 4rpx 10rpx rgba(255,140,0,0.2);
}

/* --- 活动卡片列表 --- */
.activity-cards-list-section { /* */ }

/* --- 活动卡片核心样式 --- */
.card.activity-card-item {
  background-color: var(--card-bg-solid-white);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-card); /* **更柔和的阴影** */
  margin-bottom: 30rpx;
  overflow: hidden;
  width: 100%;
  display: flex;
  flex-direction: column;
  border: none;
}

.activity-image-placeholder {
  width: 100%;
  height: 300rpx; /* UI稿图片高度约150px，如果觉得矮可以适当增加到320-350rpx */
  background-color: var(--placeholder-bg);
  display: flex; align-items: center; justify-content: center;
  color: var(--placeholder-text-color); font-size: 26rpx;
}
.activity-image { width: 100%; height: 100%; }

.activity-card-content {
  padding: 24rpx 30rpx 30rpx; /* 上24，左右下30 */
}

.activity-content-title { /* h3 */
  font-size: 34rpx; /* UI稿标题约17-18px */
  font-weight: 600; color: var(--text-color-dark);
  margin-bottom: 12rpx; /* 标题与meta信息间距 */
  line-height: 1.35; /* 调整行高 */
  display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;
  overflow: hidden; text-overflow: ellipsis; white-space: normal;
}

.activity-meta-info {
  margin-bottom: 16rpx; /* meta与tags间距 */
  display: flex; flex-direction: column;
  gap: 6rpx; /* 行间距减小 */
}
.meta-item { display: flex; align-items: center; }
.meta-icon { width: 26rpx; height: 26rpx; margin-right: 8rpx; flex-shrink: 0; opacity: 0.7; } /* 图标可以小一点，颜色浅一点 */
.meta-text { /* text-sm */
  font-size: 24rpx; color: var(--text-color-light); line-height: 1.4;
}

.activity-tags-container {
  margin-bottom: 16rpx; /* tags与description间距 */
  display: flex; flex-wrap: wrap;
  gap: 10rpx 12rpx; /* 行间距和列间距 */
}
.tag { /* UI稿tag更小巧 */
  background-color: rgba(255, 140, 0, 0.08);
  color: var(--accent-color);
  padding: 4rpx 12rpx; /* 减小padding */
  border-radius: var(--border-radius-sm); /* 圆角小一点 */
  font-size: 20rpx; /* 字体也小一点 */
  font-weight: 500;
}

.activity-content-description { /* p */
  font-size: 26rpx; color: var(--text-color-light);
  line-height: 1.5; margin-bottom: 24rpx;
  display: -webkit-box; -webkit-line-clamp: 2; /* 描述限制2行 */
  -webkit-box-orient: vertical;
  overflow: hidden; text-overflow: ellipsis; white-space: normal;
}

.btn.btn-action-detail {
  padding: 12rpx 28rpx; /* 按钮再小巧一点 */
  font-size: 24rpx; /* 按钮文字也小一点 */
  font-weight: 500;
  border-radius: var(--border-radius-md);
  background-color: var(--accent-color); color: white;
  border: none;
  width: auto; min-width: 150rpx; text-align: center;
  /* 让按钮在卡片右下角 */
  display: block; /* 改为块级 */
  margin-left: auto; /* 右对齐 */
  margin-right: 0;  /* 确保不超出 */
  margin-top: 10rpx; /* 与描述的间距，如果描述为空则与tags的间距 */
}
.btn-action-detail[disabled] { background-color: #E0E0E0; color: #AAAAAA; opacity: 1; }

/* --- 为你推荐 --- */
.recommendation-title {
  display: block; font-size: 36rpx; font-weight: 600;
  color: var(--text-color-dark); margin-top: 50rpx; margin-bottom: 20rpx;
}

/* --- 空状态 --- */
.empty-activities-placeholder {
  text-align: center; padding: 80rpx 0;
  color: var(--text-color-light); font-size: 28rpx;
}