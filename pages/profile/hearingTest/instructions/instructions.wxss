/* pages/profile/hearingTest/instructions/instructions.wxss */
page { /* ...全局变量... */ }
.test-instructions-page {
    padding: 40rpx; background-color: #F8F4F0; min-height: 100vh;
    font-family: var(--font-family);
}

.page-main-title { /* h1 */
    display: block; font-size: 48rpx; font-weight: 600;
    color: var(--text-color-dark); margin-bottom: 40rpx; text-align: center; /* 标题居中 */
}

.card { /* 通用卡片 */
    background: var(--card-bg, white); border-radius: var(--border-radius-lg);
    padding: 30rpx; margin-bottom: 30rpx; box-shadow: var(--shadow-soft);
    width: 100%; border: none;
}
.card-icon-wrapper {
    text-align: center; margin-bottom: 20rpx; /* UI稿 mb-15 */
}
.card-icon {
    width: 100rpx; /* UI稿 50px */
    height: 100rpx;
    /* fill: var(--accent-color); for SVG */
}
.card-title-main { /* h3 */
    display: block; font-size: 36rpx; font-weight: 600;
    color: var(--text-color-dark); margin-bottom: 20rpx; /* UI稿 mb-10 */
    text-align: center; /* UI稿 卡片内标题居中 */
}

.instruction-list { /* UI稿 ul */
    padding-left: 10rpx; /* 模拟ul的缩进 */
}
.instruction-item { /* UI稿 li */
    display: flex; margin-bottom: 16rpx; /* UI稿 li mb-5, 这里稍大 */
}
.instruction-item:last-child { margin-bottom: 0; }
.list-dot {
    margin-right: 16rpx; /* 圆点与文字间距 */
    color: var(--text-color-light); line-height: 1.6;
}
.instruction-item .p { /* p */
    font-size: 28rpx; line-height: 1.6; color: var(--text-color-light);
    flex: 1; /* 让文字占据剩余空间 */
}

.explanation-card .explanation-text { /* p */
    font-size: 28rpx; line-height: 1.6; color: var(--text-color-light);
    margin-bottom: 16rpx;
}
.important-notice { /* UI稿 text-sm text-accent mt-10 flex-start gap-5 */
    display: flex;
    align-items: flex-start; /* 图标和文字顶部对齐 */
    margin-top: 20rpx;
    padding: 16rpx; /* 给提示一些内边距和背景 */
    background-color: rgba(255, 140, 0, 0.05); /* 非常浅的橙色背景 */
    border-radius: var(--border-radius-sm);
}
.notice-icon {
    width: 32rpx; /* UI稿 16px */
    height: 32rpx;
    margin-right: 10rpx; /* UI稿 gap-5 */
    flex-shrink: 0;
    /* fill: var(--accent-color); for SVG */
    margin-top: 4rpx; /* 微调垂直对齐 */
}
.notice-text { /* p text-sm text-accent */
    font-size: 24rpx;
    color: var(--accent-color);
    line-height: 1.5;
}

.btn-start-test { /* btn btn-primary btn-full-width mt-20 */
    width: 100%; display: block; padding: 24rpx 0;
    font-size: 32rpx; font-weight: 500; border-radius: var(--border-radius-md);
    background-color: var(--accent-color); color: white; border: none;
    margin-top: 40rpx;
    box-shadow: var(--shadow-soft);
}