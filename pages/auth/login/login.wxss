/* pages/auth/login/login.wxss */
page {
  /* ... 定义你的全局颜色变量 ... */
  --accent-color: #FF8C00;
  --text-color-dark: #333333;
  --text-color-light: #666666;
  --link-color: #007AFF; /* 示例链接颜色 */
  --bg-color-page: #F8F4F0; /* 页面背景 */
}

.login-page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around; /* 让内容在垂直方向上分布 */
  min-height: 100vh;
  padding: 80rpx 60rpx; /* 上下和左右的内边距 */
  background-color: var(--bg-color-page);
  box-sizing: border-box;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}
.app-logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 30rpx; /* logo圆角 */
  margin-bottom: 30rpx;
  background-color: #eee; /* 占位背景 */
}
.app-name-text {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-color-dark);
}

.login-actions-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}
.login-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx; /* 全圆角按钮 */
  font-size: 32rpx;
  font-weight: 500;
  background-color: var(--accent-color); /* 主题色 */
  color: white;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(255, 140, 0, 0.3);
}
.login-button:active {
  opacity: 0.9;
  transform: scale(0.98);
}
.loading-indicator {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  color: var(--text-color-light);
}
.loading-text {
  margin-left: 16rpx;
  font-size: 28rpx;
}


.agreement-section {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap; /* 允许换行 */
  font-size: 24rpx;
  color: var(--text-color-light);
  line-height: 1.5;
  text-align: center; /* 如果换行，希望居中 */
}
.agreement-checkbox {
  transform: scale(0.7); /* 缩小checkbox */
  margin-right: 8rpx;
  /* vertical-align: middle; */ /* 微调对齐 */
}
.agreement-text {
  /*  */
}
.link-text {
  color: var(--link-color); /* 链接颜色 */
  /* text-decoration: underline; */ /* 小程序不支持 text-decoration */
  padding: 0 4rpx; /* 给链接一点点击区域 */
}
.guest-mode-link {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #888888;
  text-align: center;
}