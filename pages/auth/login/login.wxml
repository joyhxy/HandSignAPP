<!-- pages/auth/login/login.wxml -->
<view class="container login-page-container">
    <view class="logo-section">
        <image class="app-logo" src="/assets/images/app-logo.png" mode="aspectFit"/>
        <text class="app-name-text">手语星球</text> <!-- 或者你们的APP名称 -->
    </view>

    <view class="login-btn-wrapper">
    <!-- 原有的登录按钮 -->
    <button class="login-btn" bindtap="handlePrimaryLogin">微信授权登录</button>
    
    <!-- --- 新增的游客模式入口 --- -->
    <view class="guest-mode-link" bindtap="enterAsGuest">暂不登录，随便看看</view>
  </view>

  <view class="agreement-section">
    <checkbox-group bindchange="onAgreementChange">
      <label class="agreement-label">
        <checkbox value="agreed" checked="{{hasAgreedPrivacy}}"></checkbox>
        <text class="agreement-text">我已阅读并同意<text class="link" bindtap="navigateToUserAgreement">《用户服务协议》</text>与<text class="link" bindtap="navigateToPrivacyPolicy">《隐私政策》</text></text>
      </label>
    </checkbox-group>
  </view>
</view>